{
    "name": "worksome/company-info",
    "description": "Lookup company information",
    "keywords": [
        "worksome",
        "laravel",
        "company-info"
    ],
    "homepage": "https://github.com/worksome/company-info",
    "license": "MIT",
    "authors": [
        {
            "name": "Odinn Adalsteinsson",
            "email": "odinn.adalsteinsson@worksome.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^8.73"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0 || ^2.0",
        "orchestra/testbench": "^6.22",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-parallel": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.1",
        "spatie/laravel-ray": "^1.26",
        "worksome/pest-plugin-silence": "^0.1",
        "worksome/coding-style": "0.6.2"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\CompanyInfo\\": "src",
            "Worksome\\CompanyInfo\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\CompanyInfo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcbf",
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/phpcs -n",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\CompanyInfo\\CompanyInfoServiceProvider"
            ],
            "aliases": {
                "CompanyInfo": "Worksome\\CompanyInfo\\Facades\\CompanyInfo"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
